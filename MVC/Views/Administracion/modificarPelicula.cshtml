@model MVC.Models.PeliculaModelAndView
@{
    ViewBag.Title = "modificarPelicula";
    Layout = "~/Views/Shared/_AdministradorBase.cshtml";
}

<div class="col-md-offset-3 col-md-6">
    <hr />
    <div class="">
        <a href="/Administracion/Peliculas"><input type="button" class="btn btn-info" value="volver" />  </a>
    </div>
    <div class="text-center"><h3>Modificar una pelicula</h3></div>
    <div>
        <div class="well">

            <form action="agregarPelicula" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="" class="control-label">Nombre</label>
                    <div>
                        <input type="hidden" class="form-control" name="idPeliculaModel" value="@Model.idPeliculaModel" />
                        <input type="text" class="form-control" name="nombrePeliculaModel" value="@Model.nombrePeliculaModel" />
                        <div class="btn-danger"> @Html.ValidationMessageFor(x => x.nombrePeliculaModel)</div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Descripción</label>
                    <div>
                        <textarea class="form-control" name="descripcionPeliculaModel">@Model.descripcionPeliculaModel </textarea>
                        <div class="btn-danger">
                            @Html.ValidationMessageFor(x => x.descripcionPeliculaModel)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Calificación</label>
                    <div>
                        <select id="comboCalificacionPeliculaModel" name="idCalificacionPeliculaModel" class="form-control">
                            <option value="0" name="idCalificacionPeliculaModel">Seleccione</option>

                            @foreach (var calificacion in Model.listadoDeCalificaciones)
                            {
                                <option value="@calificacion.IdCalificacion" name="idCalificacionPeliculaModel"> @calificacion.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="btn-danger">
                        @Html.ValidationMessageFor(x => x.idCalificacionPeliculaModel)
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="control-label">Género</label>
                    <div>
                        <select id="comboPeliculaModel" name="idgeneroPeliculaModel" class="form-control">
                            <option value="0" name="idgeneroPeliculaModel">Seleccione</option>
                            @foreach (var genero in Model.listadoDeGeneros)
                            {
                                <option value="@genero.IdGenero" name="idgeneroPeliculaModel"> @genero.Nombre</option>
                            }
                        </select>
                        <div class="btn-danger">
                            @Html.ValidationMessageFor(x => x.idgeneroPeliculaModel)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="" class="control-label">Imagen</label>
                    <div>
                        <input type="file" name="imagenPeliculaModel" id="imagenPelicula" value="@Model.imagenPeliculaModel" />
                        <div class="btn-danger">
                            @ViewBag.ErrorPeliculaImagen
                            @Html.ValidationMessageFor(x => x.imagenPeliculaModel)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="" class="control-label">Duración</label>
                    <div>
                        <input type="text" class="form-control" name="duracionPeliculaModel" value="@Model.duracionPeliculaModel" />
                        <div class="btn-danger">
                            @Html.ValidationMessageFor(x => x.duracionPeliculaModel)
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-block btn-success" value="Agregar película" />
            </form>
            <div class="text-center alert-danger"> <h4>@ViewBag.errorPelicula</h4></div>
        </div>
    </div>
</div>